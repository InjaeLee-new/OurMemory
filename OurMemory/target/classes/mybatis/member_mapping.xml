<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.memberMapper">
	<!--  회원가입  -->
	<insert id="memberJoin" parameterType="memberDTO">
		insert into memoryMember values
		(#{name}, #{id} , #{pw} , #{nickname}, #{gender}, #{email1}, 
		#{email2}, #{tel1}, #{tel2} , #{tel3}, #{addr}, #{check_email}, #{check_sms}, 
		#{profile_image}, sysdate)
	</insert>
	
	
	<!-- 글 하나 불러오기 -->
	<select id="memberLogin" parameterType="String" resultType="memberDTO">
		select * from memoryMember where id = #{id}
	</select>
	
	<!-- 조회수 증가 -->
	<update id="memberModify" parameterType="String">
		회원정보 수정 칸이 만들어지면 작업할 예정
	</update>
</mapper>
